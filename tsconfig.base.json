{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ha/appfhir": ["libs/appfhir/src/index.ts"],
      "@ha/apptheme": ["libs/apptheme/src/index.ts"],
      "@ha/authstore": ["libs/authstore/src/index.ts"],
      "@ha/common": ["libs/common/src/index.ts"],
      "@ha/health/appointments": ["libs/health/appointments/src/index.ts"],
      "@ha/health/configurations": ["libs/health/configurations/src/index.ts"],
      "@ha/health/dashboard": ["libs/health/dashboard/src/index.ts"],
      "@ha/health/opd": ["libs/health/opd/src/index.ts"],
      "@ha/health/organizations": ["libs/health/organizations/src/index.ts"],
      "@ha/health/patients": ["libs/health/patients/src/index.ts"],
      "@ha/health/practitioners": ["libs/health/practitioners/src/index.ts"],
      "@ha/shared-ui": ["libs/shared-ui/src/index.ts"],
      "constants": ["./node_modules/constants-browserify"],
      "crypto": ["./node_modules/crypto-browserify"],
      "stream": ["./node_modules/stream-browserify"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
